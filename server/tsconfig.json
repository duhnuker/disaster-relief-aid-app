{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./server/dist",
		"rootDir": "./server",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["server/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "client"]
}